
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Profile - Blog App</title>
    <style>
        .profile-header {
            text-align: center;
            padding: 2rem 0;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 2rem;
        }
        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 1rem;
        }
        .profile-name {
            font-size: 2rem;
            color: #343a40;
            margin-bottom: 0.5rem;
        }
        .profile-email {
            color: #6c757d;
            font-size: 1rem;
        }
        .blog-count {
            margin-top: 1rem;
            font-size: 1.1rem;
            color: #495057;
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>
    
    <main class="container mt-5">
        <div class="profile-header">
            <img src="<%= user.profileImage %>" alt="Profile picture" class="profile-image shadow">
            <h1 class="profile-name"><%= user.fullname %></h1>
            <p class="profile-email"><%= user.email %></p>
            <p class="blog-count">Total Blogs: <%= blogs.length %></p>
        </div>

        <h2 class="mb-4">My Blogs</h2>
        
        <div class="row">
            <% if (blogs && blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="col-md-6 mb-4">
                        <article class="card h-100 shadow-sm blog-card">
                            <% if (blog.coverImage) { %>
                                <img src="<%= blog.coverImage %>"
                                     class="card-img-top blog-image" 
                                     alt="Cover image for <%= blog.title %>">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <h3 class="card-title blog-title"><%= blog.title %></h3>
                                <div class="blog-meta mb-2">
                                    <time datetime="<%= blog.createdAt.toISOString() %>">
                                        <%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                    </time>
                                </div>
                                <p class="card-text blog-excerpt flex-grow-1"><%= blog.body.substring(0, 150) %>...</p>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary read-more-btn mt-auto">Read More</a>
                            </div>
                        </article>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        You haven't created any blogs yet. <a href="/blog/create-blog" class="alert-link">Create your first blog!</a>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <%- include('partials/scripts') %>
</body>
</html>
