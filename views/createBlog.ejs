
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Create Blog - Blog App</title>
    <style>
        .preview-container {
            border: 1px solid #dee2e6;
            padding: 1rem;
            margin-top: 1rem;
            border-radius: 0.25rem;
        }
        .preview-container img {
            max-width: 100%;
            height: auto;
        }
        #preview {
            min-height: 200px;
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body p-5">
                        <h3 class="card-title text-center mb-4">Create New Blog</h3>
                        <form action="/blog/create-blog" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" name="title" required>
                            </div>
                            <div class="mb-3">
                                <label for="body" class="form-label">Content</label>
                                <div class="form-text mb-2">Type normally - important text between *asterisks*, titles with #, lists with - or numbers</div>
                                <textarea class="form-control" id="body" name="body" rows="6" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Preview</label>
                                <div class="preview-container">
                                    <div id="preview"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="coverImage" class="form-label">Cover Image</label>
                                <input type="file" class="form-control" id="coverImage" name="coverImage" accept="image/*">
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Create Blog</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script>
        const bodyInput = document.getElementById('body');
        const preview = document.getElementById('preview');

        function autoFormat(text) {
            // Auto-format common patterns
            text = text.replace(/^([A-Z][^.!?]*[.!?])$/gm, '# $1'); // Sentences starting with caps as headers
            text = text.replace(/\b(important|note|warning):/gi, '**$1:**'); // Highlight important words
            text = text.replace(/^[-*]\s(.+)$/gm, '- $1'); // Auto-format lists
            return text;
        }

        function updatePreview() {
            const formattedText = autoFormat(bodyInput.value);
            preview.innerHTML = marked.parse(formattedText);
        }

        bodyInput.addEventListener('input', updatePreview);
        updatePreview();
    </script>
</body>
</html>
